<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" 
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
	<head>
		<% hook :inside_head do %>
		<%= render :partial => 'shared/head'%>
		<% end %>
	</head>
	<body>
		<div id="container"> 
			<div id="header"> 
				<h1><a href="/" title="eCommerce Spree Theme"><img src="/images/logo.jpg" alt="enVirashop" /></a></h1>
				<ul id="nav-shadow">
					<li class="orange-cart"><a href="#" title="View Cart">View Cart</a></li>
				</ul>
				<!-- end shadow navigation --> 
			</div>
			<div id="content"> 
				<div id="headmenu"> 
					<div id="menu"> 
						<ul id="nav" class="wrap">
							<li class="page_item notfirst"><a href="/"><span><%=t('home')%></span></a></li>
							<li class="page_item page-item-2"><a href="#" title=<%=t('about_us')%>><span><%=t('about_us')%></span></a></li>
							<li class="page_item page-item-23"><a href="#" title=<%=t('delivery')%>><span><%=t('delivery')%></span></a></li>
						</ul>
					</div>
					<% if @current_controller == "products" or @current_controller == "taxons" %>
						<%= render "shared/taxonomies" %>
					<% end %>
				</div>
				<div class="wrap background"> 
					<% if (@current_controller == "products" && @current_action != "show") || @current_controller == "taxons" %>
						<div class="archivehead">
							<div class="arh"><%= t('you_are_currently_looking_at') + (@taxon ? t('our_selection_of') + @taxon.name : t('all_our_products')) %>.</div>
							<div class="pagenavi">
								<div class="wp-pagenavi">
									<span class="current">1</span>
									<!--
									<a title="2" class="page" href="http://www.lifeofstrange.com/envirashop/category/electronics/page/2/">2</a>
									<a href="http://www.lifeofstrange.com/envirashop/category/electronics/page/2/">&raquo</a>
								    -->
								</div>
							</div>
						</div>
					<% end %>
					
					<% if flash[:notice] %>
						<div class="flash notice"><%= flash[:notice] %></div>
					<% end %>
					
					<% if flash[:error] %>
						<div class="flash errors"><%= flash[:error] %></div>
					<% end %>
					
					<% if @current_controller == "products" && @current_action == "show" %>						
						<%= yield %>
					<% else %>
						<div class="page">							
							<%= yield %>
						</div>
					<% end %>
				</div>
			</div>
			<%= render :partial => 'shared/footer'%>
			<!-- Wrap Background Div --> 
		</div>
	</body>
</html>
